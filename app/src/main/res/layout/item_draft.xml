<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/tv_title"
        android:maxEms="15"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="我想着最浪漫的事情莫过去海边盖一座asdasdasdasdadasd"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_15" />
    <ImageView
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/tv_title"
        android:id="@+id/type_img"
        android:layout_alignBottom="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/caogao_yoji"
        />
    <TextView
        android:id="@+id/tv_commit_time"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018.6.15  13:48"
        android:textColor="#ff888888"
        android:textSize="@dimen/sp_12"
        />
    <ImageView
       android:id="@+id/more"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentRight="true"
        android:src="@mipmap/more"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_5"

        />
    <ImageView
        android:id="@+id/img_draft"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_commit_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/sea"
        />
</RelativeLayout>