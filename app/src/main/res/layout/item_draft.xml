<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebg_radius3"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:ellipsize="end"
            android:maxEms="15"
            android:singleLine="true"
            android:text="我想着最浪漫的事情莫过去海边盖一座asdasdasdasdadasd"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/type_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/tv_title"
            android:src="@mipmap/caogao_yoji" />

        <TextView
            android:id="@+id/tv_commit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_11"
            android:text="2018.6.15  13:48"
            android:textColor="#ff888888"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:id="@+id/more_view"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_30"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:gravity="right">
            <ImageView
                android:id="@+id/more"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_5"
                android:src="@mipmap/more"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginRight="@dimen/dp_21"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_draft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_187"
            android:layout_below="@+id/tv_commit_time"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/sea" />
    </RelativeLayout>


</LinearLayout>