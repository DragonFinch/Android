<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/transparent"
        android:src="@mipmap/guanbi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_conner_10dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:background="@color/orgeen_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/str_choice_target_collection_album"
                android:textColor="@color/common_color" />
        </LinearLayout>

        <View style="@style/CommonLine_Style" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_130" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_sure_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/orgeen_color"
        android:gravity="center"
        android:text="@string/str_confirm"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_15" />
</LinearLayout>