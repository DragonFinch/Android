<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_radius">

    <com.iyoyogo.android.widget.CircleImageView
        android:id="@+id/my_basic_headimg_iv_id"
        android:layout_width="@dimen/dp_62"
        android:layout_height="@dimen/dp_62"
        android:layout_marginTop="@dimen/dp_23"
        android:layout_marginLeft="@dimen/dp_23"
        android:src="@mipmap/sea" />

    <ImageView
        android:layout_marginBottom="@dimen/dp_22"
android:id="@+id/img_vip_sign"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/dp_66"
        android:layout_height="@dimen/dp_75"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_12"

        android:src="@mipmap/huiyuanbiaoshi" />
<ImageView
    android:id="@+id/img_level"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/lv1"
    android:layout_alignBottom="@+id/img_vip_sign"
    android:layout_alignRight="@+id/img_vip_sign"
    />
    <LinearLayout
        android:id="@+id/my_basic_llone_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_toRightOf="@id/my_basic_headimg_iv_id"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_marginLeft="@dimen/dp_22"
            android:id="@+id/my_basic_name_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_name"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/my_basic_name_iv_id"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/edit" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_basic_llone_id"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/my_basic_headimg_iv_id"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/my_basic_fans_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_fans"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/my_basic_fansnumber_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="197"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/sp_20"
            android:background="#181818" />

        <TextView
            android:id="@+id/my_basic_follow_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="@string/my_follow"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/my_basic_follownumber_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="158"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <ImageView
        android:id="@+id/vip_center_img"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/huiyuanzx" />

</RelativeLayout>