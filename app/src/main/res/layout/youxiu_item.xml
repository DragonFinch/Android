<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_youxiu"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_24"

        android:scaleType="centerCrop"

        android:src="@mipmap/ic_yoxiu" />

    <ImageView
        android:id="@+id/youxiu_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/img_youxiu"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:src="@mipmap/all" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_youxiu_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_204"
        android:layout_below="@+id/img_youxiu"
        android:layout_marginLeft="@dimen/dp_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:layout_below="@+id/recycler_youxiu_item"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#F1F1F1" />
</RelativeLayout>