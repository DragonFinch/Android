<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/rl_like"
                    android:background="@mipmap/xiala_bg_"
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_50">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="不喜欢"
           android:drawablePadding="@dimen/dp_5"
           android:textSize="@dimen/sp_15"
           android:layout_centerHorizontal="true"
           android:textColor="#333"
           android:id="@+id/tv_dislike"
           android:layout_marginTop="@dimen/dp_15"
           android:drawableLeft="@mipmap/buxihuan"
           />
    <View
        android:id="@+id/line"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:layout_below="@+id/tv_dislike"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f1f1f1"
        />
    <TextView
        android:layout_below="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="举报"
        android:layout_alignLeft="@+id/tv_dislike"
        android:drawablePadding="@dimen/dp_5"
        android:textSize="@dimen/sp_15"
        android:layout_centerHorizontal="true"
        android:textColor="#333"
        android:id="@+id/tv_report"
        android:layout_marginTop="@dimen/dp_16"
        android:drawableLeft="@mipmap/jubao" />
    </RelativeLayout>