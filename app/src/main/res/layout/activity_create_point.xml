<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_create_point"
    tools:context=".ui.common.CreatePointActivity">
<include layout="@layout/common_bar" android:id="@+id/bar"/>
    <RelativeLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/relative_map"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_600">
        <TextView
            android:id="@+id/tv_location"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_20"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            android:text="位置名称"
            />
        <EditText
            android:id="@+id/edit_create_point"
            android:layout_marginTop="@dimen/dp_20"
          android:background="@color/transparent"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_toRightOf="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:hint=""
            android:textColor="#ff333333"
            android:textSize="15sp" />
        <View

            android:id="@+id/line_location"
            android:layout_below="@+id/tv_location"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="1dp"/>

        <TextView
android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_below="@+id/line_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_city"
            />
        <View
            android:visibility="gone"
            android:layout_below="@+id/tv_city"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_21"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:id="@+id/line_create_point"
            />
        <com.amap.api.maps2d.MapView
            android:id="@+id/map"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/line_create_point"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_300"/>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@+id/map"
            android:id="@+id/map_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_type"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_20"
            android:text="所属类别"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            android:layout_below="@+id/map_line"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_choose_type"
            android:layout_toRightOf="@+id/tv_type"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text="选择类别"
            android:textColor="#ff888888"
            android:textSize="@dimen/sp_15"
            android:layout_below="@+id/map_line"
            />
        <View
            android:visibility="gone"
            android:id="@+id/relative_line"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
    </RelativeLayout>

</RelativeLayout>