<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/list_blank"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:src="@mipmap/blank_list" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="你还木有发布任何yo·秀yo～"
        android:textColor="@color/c333333"
        android:textSize="@dimen/sp_15" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="别的小朋友都发布yo·秀了，你什么时候才发布呀？"
        android:textColor="@color/c888888"
        android:textSize="@dimen/sp_15"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mashangqu"
            android:textColor="@color/c888888"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_yoxiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="创建yo·秀"
            android:textColor="@color/FA800A"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="！"
            android:textColor="@color/c888888"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_3"
        android:src="@mipmap/tabxian"
        android:layout_marginLeft="20dp"/>

</LinearLayout>