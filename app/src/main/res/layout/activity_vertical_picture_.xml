<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.common.Vertical_picture_Activity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_720"
        android:src="@mipmap/picture"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_320"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_1"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:text="对比照"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_23" />

            <ImageView
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_50"
                android:src="@mipmap/off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_115"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/chongpai"
                android:gravity="center"
                android:text="重拍"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_23" />

            <ImageView
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_115"
                android:layout_weight="1"
                android:src="@mipmap/baocun" />

            <TextView
                android:layout_width="@dimen/dp_115"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/fabu"
                android:gravity="center"
                android:text="保存并发布"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_23" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</RelativeLayout>