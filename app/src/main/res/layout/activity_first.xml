<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setname"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/orange_fillet"
                android:drawableRight="@mipmap/botton"
                android:drawablePadding="-10dp"
                android:gravity="center"
                android:paddingRight="@dimen/dp_10"
                android:text="@string/user"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10" />

            <android.support.v7.widget.SearchView
                android:layout_margin="10dp"
                android:id="@+id/search_guanjiaci"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="qweqweqwe"
                android:background="@null"
                android:isScrollContainer="false"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/search_btn_back"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:alpha="0.7"
                android:background="@drawable/ic_camera" />



        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:text="@string/quxiao"
            android:textColor="@color/c333333"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_70"
        android:background="@color/c888888" />
    <ListView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_lv"></ListView>
    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:visibility="gone"
        android:layout_margin="20dp"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/user_title"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv"></android.support.v7.widget.RecyclerView>



        <ImageView
            android:id="@+id/content"
            android:visibility="gone"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/content_title"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_content"></android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_user"></android.support.v7.widget.RecyclerView>


    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/hit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/blank_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/zhelishikongde"
            android:textColor="@color/c333333"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>