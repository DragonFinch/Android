<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp20"
    android:background="@color/white">

    <!--系统消息-->
    <!--item-->

    <View
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/dot_read"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/red_dot"
        />
    <TextView
        android:id="@+id/system_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.0 版本上线啦！快去更新吧～"
        android:textColor="@color/c333333"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/dp20"
        />

    <TextView
        android:id="@+id/system_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1分钟前"
        android:textColor="@color/c888888"
        android:textSize="12sp"
        android:layout_below="@id/system_message_content"
        android:layout_marginLeft="@dimen/dp20"
        android:paddingTop="8dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/system_message_time"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/E1E1E1" />
</RelativeLayout>