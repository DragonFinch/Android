<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:id="@+id/message_center_back_im_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/xiaoxizhongxin"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16"
           />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/F1F1F1" />

    <RelativeLayout
        android:id="@+id/message_center_system_message_rl_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            app:icon="@mipmap/xitong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_system"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/message_system"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/message_system"
            android:text="@string/xitongxiaoxi"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/F1F1F1" />

    <RelativeLayout
        android:id="@+id/message_center_like_me_rl_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            app:icon="@mipmap/love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_message"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/like_message"
            android:layout_centerVertical="true"

            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@+id/like_message"
            android:text="@string/xihuanwode"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/F1F1F1" />

    <RelativeLayout
        android:id="@+id/message_center_commentary_message_rl_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            app:icon="@mipmap/pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/discuss_message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/discuss_message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/discuss_message"
            android:text="@string/pinglunxiaoxi"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/F1F1F1" />

    <RelativeLayout
        android:id="@+id/message_center_focus_on_news_rl_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:id="@+id/attention_message"
            android:layout_centerVertical="true"
            app:icon="@mipmap/guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center"
           />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/attention_message"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@+id/attention_message"
            android:text="@string/guanzhuxiaoxi"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_arrow_right" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/F1F1F1" />


</LinearLayout>