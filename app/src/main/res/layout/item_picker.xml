<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  >

    <ImageView
        android:id="@+id/image_src"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
<View

    android:layout_below="@+id/image_src"
    android:background="@color/white"
    android:layout_width="@dimen/dp_100"
    android:layout_height="@dimen/dp_5"/>
    <View

      android:layout_toRightOf="@+id/image_src"
        android:background="@color/white"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_100"/>
    <ImageView
        android:layout_alignTop="@+id/image_src"
        android:layout_alignRight="@+id/image_src"
        android:id="@+id/image_choose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/checkbox_selector" />
</RelativeLayout>