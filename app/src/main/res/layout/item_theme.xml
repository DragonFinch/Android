<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assetItem"
    android:layout_width="49dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="12dp"
    android:background="@color/nv_colorTranslucent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutAsset"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@drawable/fx_item_radius_shape_unselect"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imageAsset"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/default_theme" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nameAsset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</LinearLayout>
