<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15">

        <com.iyoyogo.android.widget.CircleImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"

            android:src="@mipmap/touxiang" />

        <ImageView
            android:id="@+id/medal"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:layout_alignRight="@+id/user_icon"
            android:layout_alignBottom="@+id/user_icon"
            android:src="@mipmap/huiyuan" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/user_name"
            android:textColor="#ff333333"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_icon"
            android:text="温暖的日子"
             />

        <LinearLayout

            android:id="@+id/look_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/user_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/index_look_icon"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:scaleType="fitXY"
                android:src="@mipmap/see" />

            <TextView
                android:id="@+id/num_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="100"
                android:textColor="#888888"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout

            android:layout_marginRight="20dp"
            android:id="@+id/view_like"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_3"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_del"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_3"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/zuji_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            android:src="@mipmap/defult_169" />
        <ImageView

            android:visibility="visible"
            android:id="@+id/img_type"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/jingxuan"

            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="一直单身汪的海边度假"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_location_white" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLength="14"
                android:singleLine="true"
                android:text="巴黎"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="| 10天"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="| ￥3000"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dt_like"
            android:layout_width="19dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"

            android:scaleType="centerCrop"
            android:src="@mipmap/datu_xihuan"


         />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ll_like_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <com.iyoyogo.android.widget.PileLayout
            android:id="@+id/pile_layout"
            android:layout_width="129dp"
            android:layout_height="25dp" />

        <TextView
            android:id="@+id/tv_num_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="等100人喜欢"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/recycler_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_num_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="全部评论(100)"
            android:textColor="#888888"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_arrow_right" />
    </LinearLayout>
    <View
        android:background="#f1f1f1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="5dp"

        />
</LinearLayout>