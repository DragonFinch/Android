<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="visible">

        <com.iyoyogo.android.widget.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/touxiang" />

        <ImageView
            android:id="@+id/medal"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:layout_alignRight="@+id/user_icon"
            android:layout_alignBottom="@+id/user_icon"
            android:src="@mipmap/huiyuan"
            android:visibility="gone" />

        <TextView

            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/user_icon"
            android:text="温暖的日子"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/user"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@+id/user_name"
            android:src="@mipmap/lv1"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/look_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/user_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/index_look_icon"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:scaleType="fitXY"
                android:src="@mipmap/see" />

            <TextView
                android:id="@+id/num_look"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="100"
                android:textColor="#888888"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/view_like"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="@dimen/dp_15"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_del"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_3"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/zuji_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            android:src="@mipmap/defult_169" />

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/jingxuan"
            android:visibility="visible"

            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="一直单身汪的海边度假"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_location_white" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLength="14"
                android:singleLine="true"
                android:text="巴黎"
                android:textColor="@color/colorWhite" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLength="14"
                android:singleLine="true"
                android:text="-"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/location_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:ellipsize="end"
                android:maxLength="14"
                android:singleLine="true"
                android:text="巴黎"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="| 10天"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="| ￥3000ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dt_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/datu_xihuan" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_like_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <com.iyoyogo.android.widget.PileLayout
            android:id="@+id/pile_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20" />

        <TextView
            android:id="@+id/tv_num_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="等100人喜欢"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

    </android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/layout_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_num_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="全部评论(100)"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_arrow_right"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_attention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_14"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tuijian" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/zhelishikongde"
                android:textColor="@color/c333333"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <com.iyoyogo.android.view.CircleImageView
                    android:id="@+id/attention_user_icon"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@mipmap/default_touxiang" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/attention_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/complete"
                        android:textColor="@color/c333333"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/attention_ji_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ji"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="80"
                            android:textColor="@color/c333333"
                            android:textSize="@dimen/sp_10" />

                        <TextView
                            android:id="@+id/attention_xiu_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:drawableLeft="@mipmap/xiu"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="180"
                            android:textColor="@color/c333333"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_attention"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/bg_collection"
                        android:gravity="center"
                        android:text="+关注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_attention_one"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/img_attention_two"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/img_attention_three"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/img_attention_four"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/F1F1F1" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#f1f1f1" />
</LinearLayout>