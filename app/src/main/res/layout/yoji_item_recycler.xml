<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_15"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.iyoyogo.android.widget.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@mipmap/touxiang"
            />
<ImageView
    android:src="@mipmap/huiyuan"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_below="@+id/user_icon"
    android:layout_toLeftOf="@+id/look_ll"
    android:layout_width="@dimen/dp_11"
    android:layout_height="@dimen/dp_11" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user_icon"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@id/user_icon"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@id/user_icon"
            android:text="温暖的日子"
            android:textColor="#333333" />

        <LinearLayout
            android:id="@+id/look_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_toRightOf="@id/user_icon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/index_look_icon"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@mipmap/index_kankan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="100"
                android:id="@+id/num_look"
                android:textColor="#888888"
                android:textSize="10sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/view_like"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_3"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/view_del"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_3"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_12">

        <ImageView
            android:id="@+id/zuji_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            android:src="@mipmap/sea" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:lines="1"
            android:gravity="center"
            android:text="一直单身汪的海边度假"
            android:ellipsize="end"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_location_white" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="巴黎"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLength="14"
                android:textColor="@color/colorWhite" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="| 10天"
                android:id="@+id/tv_day"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="| ￥3000"
                android:id="@+id/tv_cost"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <com.iyoyogo.android.view.DrawableTextView
            android:id="@+id/dt_like"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:text=""
            android:gravity="center"
            android:textColor="#333333"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            app:leftDrawable="@mipmap/index_dianzan_unselect"
            app:leftDrawableHeight="@dimen/dp_15"
            app:leftDrawableWidth="@dimen/dp_15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/ll_like_list"
        android:orientation="horizontal">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:text="等100人喜欢"
            android:id="@+id/tv_num_like"
            android:textColor="#333333"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"

        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部评论(100)"
            android:textColor="#888888"
            android:id="@+id/tv_num_comment"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:scaleType="fitXY"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_gravity="center"
            android:src="@mipmap/ic_arrow_right"
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_10" />
    </LinearLayout>
</LinearLayout>