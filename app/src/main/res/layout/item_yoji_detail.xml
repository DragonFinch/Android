<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/yoji_detail_discribe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/border_yoxiu"
            />
        <TextView
            android:padding="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_14"
            android:id="@+id/tv_position_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/lubiao"
            android:background="@drawable/fillet_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿德莱德大学"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/tv_position_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2天"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.9.4"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentRight="true"
            />
        <com.iyoyogo.android.widget.FlowGroupView
            android:layout_below="@+id/tv_position_name"
            android:layout_width="match_parent"
            android:id="@+id/flow"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:src="@mipmap/sea"
            android:layout_below="@+id/flow"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/plane"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/feiji"
        />
    <ImageView
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_42"
        android:src="@mipmap/tangchuan_zhang"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>