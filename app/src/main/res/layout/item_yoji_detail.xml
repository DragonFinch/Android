<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/relative"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/border_yoxiu"
            />
        <TextView
            android:padding="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_14"
            android:id="@+id/tv_position_name"
            android:layout_marginLeft="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_5"
            android:drawableLeft="@mipmap/lubiao"
            android:background="@drawable/fillet_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿德莱德大学"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/tv_position_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 2天"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018.9.4"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentRight="true"
            />
        <com.iyoyogo.android.widget.FlowGroupView
            android:layout_below="@+id/tv_position_name"
            android:layout_width="match_parent"
            android:id="@+id/flow"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/picture_count_one"
            android:layout_below="@+id/flow"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_count_one_one"
                android:layout_width="match_parent"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_233"

                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/picture_count_two"
            android:layout_below="@+id/flow"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_count_two_one"
                android:layout_width="@dimen/dp_204"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_131"

                />
            <ImageView
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@+id/img_count_two_one"
                android:id="@+id/img_count_two_two"
                android:layout_width="@dimen/dp_104"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_131"

                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/picture_count_three"
            android:layout_below="@+id/flow"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_count_three_one"
                android:layout_width="@dimen/dp_204"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_160"

                />
            <ImageView
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/img_count_three_two"
                android:layout_toRightOf="@+id/img_count_three_one"
                android:layout_width="@dimen/dp_105"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_79"

                />
            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_below="@+id/img_count_three_two"
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/img_count_three_three"
                android:layout_toRightOf="@+id/img_count_three_one"
                android:layout_width="@dimen/dp_105"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_79"

                />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/picture_count_four"
            android:layout_below="@+id/flow"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_count_four_one"
                android:layout_width="@dimen/dp_204"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_131"

                />
            <ImageView
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@+id/img_count_four_one"
                android:id="@+id/img_count_four_two"
                android:layout_width="@dimen/dp_104"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_131"

                />
            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_below="@+id/img_count_four_one"
                android:id="@+id/img_count_four_three"
                android:layout_width="@dimen/dp_154"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_115"

                />
            <ImageView
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_below="@+id/img_count_four_two"
                android:id="@+id/img_count_four_four"
                android:layout_width="@dimen/dp_154"
                android:src="@mipmap/sea"
android:layout_toRightOf="@+id/img_count_four_three"
                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_115"

                />

        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/picture_count_five"
            android:layout_below="@+id/flow"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_count_five_one"
                android:layout_width="@dimen/dp_204"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_131"

                />
            <ImageView
                android:layout_toRightOf="@+id/img_count_five_one"
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/img_count_five_two"
                android:layout_width="@dimen/dp_105"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_height="@dimen/dp_131"

                />
            <ImageView
                android:layout_below="@+id/img_count_five_one"
                android:id="@+id/img_count_five_three"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_2"



                android:src="@mipmap/sea"

                android:scaleType="centerCrop"

                />
            <ImageView
                android:layout_toRightOf="@+id/img_count_five_three"
                android:layout_below="@+id/img_count_five_one"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_2"
                android:id="@+id/img_count_five_four"

                android:src="@mipmap/sea"

                android:scaleType="centerCrop"


                />
            <ImageView
                android:layout_toRightOf="@+id/img_count_five_four"
                android:layout_below="@+id/img_count_five_one"
                android:id="@+id/img_count_five_five"
                android:src="@mipmap/sea"

                android:scaleType="centerCrop"
                android:layout_width="@dimen/dp_102"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_2"

                />
            <TextView
                android:visibility="gone"
                android:background="@mipmap/count_bg"
                android:id="@+id/tv_pic_count"
                android:layout_alignRight="@+id/img_count_five_five"
                android:layout_alignBottom="@+id/img_count_five_five"
                android:gravity="center"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_14"
                android:text="6"
                />

        </RelativeLayout>


    </RelativeLayout>
    <ImageView
        android:visibility="visible"
        android:id="@+id/plane"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_below="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/feiji"
        />
    <ImageView
        android:id="@+id/img_water_mark"
        android:visibility="visible"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_42"
        android:src="@mipmap/tangchuan_zhang"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>