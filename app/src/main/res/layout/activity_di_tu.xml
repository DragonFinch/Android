<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainGray"
    android:orientation="vertical">
    <LinearLayout
        android:backgroundTint="@color/holo_orange_dark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F0F0F0"
        android:orientation="horizontal"
        android:padding="5dp" >
        <com.iyoyogo.android.view.ClearEditText
            android:id="@+id/search_editText_searchContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/holo_orange_dark"
            android:drawableLeft="@mipmap/sousuowhite"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/weizhi"
            android:textColorHint="#FEE9D5"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="#FEE9D5"
            android:textSize="15sp" >
        </com.iyoyogo.android.view.ClearEditText>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp" >
            <TextView
                android:id="@+id/search_tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="搜索"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone" />
            <TextView
                android:layout_marginRight="3dp"
                android:id="@+id/search_tv_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="取消"
                android:textColor="#ffffff"
                android:textSize="15sp"
                 />
        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="vertical">
        <RadioGroup
            android:background="@color/white"
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_52">
            <RadioButton
                android:id="@+id/rb_yoji"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:drawableBottom="@drawable/line_selector"
                android:layout_height="@dimen/dp_52"
                android:button="@null"
                android:text="@string/guonei"
                />
            <RadioButton
                android:id="@+id/rb_yoxiu"
                android:checked="false"
                android:drawableBottom="@drawable/line_selector"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_52"
                android:button="@null"
                android:text="@string/guoji"
                />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>
<ListView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_listView_search_result"></ListView>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/gson"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/blank_search"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shibai"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shibai1"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shibai2"/>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
