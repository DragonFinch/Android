<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:paddingBottom="2dp" >

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        >
        <RelativeLayout
            android:id="@+id/rela_before_img"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:id="@+id/img_yuantu"

                android:src="@mipmap/log_unselect"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_yuantu"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_yuantu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原图"
                />
            <TextView
                android:id="@+id/tv_kb"
                android:layout_toRightOf="@+id/tv_yuantu"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>





        <TextView
            android:id="@+id/btn_continue"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="继续"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_continue"

            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_black"
            android:id="@+id/back"
            />
        <TextView
            android:layout_toRightOf="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="所有图片"
            android:gravity="center_horizontal"
            />

    </RelativeLayout>
    <GridView
        android:layout_below="@+id/bar"
        android:id="@+id/gv_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:visibility="visible">
    </GridView>

</RelativeLayout>