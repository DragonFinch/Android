<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_zuji"
        android:layout_width="wrap_content"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/img_icon_zuji"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:scaleType="fitXY"
            android:src="@mipmap/search_meipai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="39dp"
            android:layout_toRightOf="@id/img_icon_zuji"
            android:text="@string/str_zuji"
            android:textColor="@color/desc_color"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/desc_color" />

    <RelativeLayout
        android:id="@+id/rl_meipai"
        android:layout_width="wrap_content"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/meipai_icon"
            android:layout_width="15dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36dp"
            android:scaleType="fitXY"
            android:src="@mipmap/search_meipai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="39dp"
            android:layout_toRightOf="@id/meipai_icon"
            android:text="@string/str_meipai"
            android:textColor="@color/desc_color"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>