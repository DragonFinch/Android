<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Normal"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:dot_visible="true"
            app:dot_size="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Dot has text"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:dot_visible="true"
            app:dot_text="40"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:dot_visible="true"
            app:dot_text="400"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Specify size"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:icon_size="25dp"
            app:textSize="20sp"
            app:dot_size="15dp"
            app:dot_visible="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Change State"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textes="Category"
            app:icon="@drawable/select_yes"
            android:clickable="true"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="select"
            android:onClick="selectView"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Dot Position"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:icon_size="25dp"
            app:dot_size="10dp"
            app:dot_visible="true"
            app:dot_alignTo="left|bottom"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:icon_size="25dp"
            app:dot_visible="true"
            app:dot_size="10dp"
            app:dot_alignTo="left|bottom"
            app:dot_marginRight="10dp"
            app:dot_marginBottom="10dp"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:icon_size="25dp"
            app:dot_visible="true"
            app:dot_size="10dp"
            app:dot_marginRight="10dp"
            app:dot_marginBottom="10dp"
            app:dot_alignToIcon="false"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="Specify Direction"
            />
        <com.iyoyogo.android.utils.icondottextview.IconDotTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:textes="Category"
            app:icon="@drawable/ic_shopping_cart_black_48dp"
            app:direction="row"
            app:spacing="10dp"
            />
    </LinearLayout>



</LinearLayout>
