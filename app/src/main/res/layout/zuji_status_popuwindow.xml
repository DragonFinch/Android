<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_50">

        <com.iyoyogo.android.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dt_show"
            android:layout_centerInParent="true"
            android:text="公开"
            android:drawablePadding="@dimen/dp_5"
            app:leftDrawable="@drawable/yoji_status_open"
            app:leftDrawableHeight="@dimen/dp_15"
            app:leftDrawableWidth="@dimen/dp_15" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/desc_color" />

    <RelativeLayout
        android:layout_width="@dimen/dp_125"
        android:layout_height="@dimen/dp_50">

        <com.iyoyogo.android.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/dt_privete"
            android:text="私密"
            android:drawablePadding="@dimen/dp_5"
            app:leftDrawable="@drawable/yoji_status_simi"
            app:leftDrawableHeight="@dimen/dp_15"
            app:leftDrawableWidth="@dimen/dp_15" />
    </RelativeLayout>

</LinearLayout>