<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_blank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:src="@mipmap/blank_msg" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="你还木有收到消息yo～"
        android:textColor="@color/c333333"
        android:textSize="@dimen/sp_15" />



    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_yoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建yo·记"
            android:textColor="#FA800A"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@+id/tv_yoxiu"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_3"
            android:src="@mipmap/line_or" />

        <TextView
            android:id="@+id/tv_yoxiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/tv_yoji"
            android:layout_weight="1"
            android:text="创建yo·秀"
            android:textColor="#FA800A"
            android:textSize="@dimen/sp_15"

            />

        <ImageView
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_2"
            android:layout_below="@+id/tv_yoji"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@+id/tv_yoji"
            android:src="@mipmap/line_or" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="或"
            android:textColor="@color/c888888"
            android:textSize="15sp"
            android:layout_toRightOf="@id/tv_yoji"
            android:layout_marginLeft="@dimen/dp_4"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="给我们一个喜欢你的机会！"
        android:textColor="#ff888888"
        android:textSize="@dimen/sp_15"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_or" />
    </LinearLayout>
</LinearLayout>