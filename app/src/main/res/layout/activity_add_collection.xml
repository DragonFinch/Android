<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/F1F1F1"
    android:orientation="vertical"
    tools:context=".ui.mine.AddCollectionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/FFFFFF">

        <ImageView
            android:id="@+id/message_center_back_im_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@mipmap/back_black" />

        <TextView
            android:id="@+id/like_me_title_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/addconcern"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Invite_Wechat_Friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/weixin_g"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/vxgoodfriend"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/invitation"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" />

    <RelativeLayout
        android:id="@+id/Invite_Weibo_Friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/weibo_g"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/vbgoodfriend"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/invitation"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" />

    <RelativeLayout
        android:id="@+id/Invite_QQ_Friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/qq_g"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/qqgoodfriend"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/invitation"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20" />

    <RelativeLayout
        android:id="@+id/add_address_book_friends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:drawableLeft="@mipmap/tongxunlu_g"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/txlgoodfriend"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:drawableRight="@mipmap/ic_arrow_right"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/invitation"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_15"
            android:background="@color/FA800A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/guanzhuwoderen"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/collection_my_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FFFFFF" />

</LinearLayout>