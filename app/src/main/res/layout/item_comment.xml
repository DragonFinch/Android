<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.iyoyogo.android.widget.CircleImageView
        android:id="@+id/img_user_icon"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/default_touxiang" />

    <ImageView
        android:id="@+id/medal"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:layout_alignRight="@+id/img_user_icon"
        android:layout_alignBottom="@+id/img_user_icon"
        android:src="@mipmap/hong"
        android:visibility="gone" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@+id/img_user_icon"
        android:text="吧"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_12"

        />

    <ImageView
        android:id="@+id/img_level"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_122"
        android:layout_below="@+id/rela_img"
        android:layout_alignBottom="@+id/user_name"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp20"
        android:layout_toRightOf="@+id/user_name"
        android:src="@mipmap/lv3"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_toRightOf="@+id/img_user_icon"
        android:text="@string/account_and_safe"
        android:textSize="@dimen/sp_10" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_user_icon"

        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_show_hide"
        android:layout_toRightOf="@+id/img_user_icon"
        android:ellipsize="end"
        android:text="我dasdasdjasdaasdasdasdasdasdasdasdasdasdasdasdasdadasdasdasdasdasdasdasdadsdasdasdasdasdadsadasda"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_12"

        />

    <TextView

        android:id="@+id/tv_show_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_user_icon"
        android:layout_alignBottom="@+id/tv_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_40"

        android:gravity="bottom"
        android:text="aaa"

        android:textColor="#5BCBF5"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#F1F1F1" />

    <LinearLayout
        android:id="@+id/layout_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_comment_like"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_comment_like" />

        <TextView
            android:id="@+id/tv_comment_like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:text="aaa" />

        <ImageView
            android:id="@+id/img_huifu"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_22"
            android:src="@mipmap/huifu" />

        <TextView
            android:id="@+id/tv_huifu_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="6dp"
            android:text="aaa" />

        <ImageView

            android:id="@+id/img_function"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:src="@mipmap/gengduo" />
    </LinearLayout>
</RelativeLayout>