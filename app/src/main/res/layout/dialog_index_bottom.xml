<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_240"
    android:background="@mipmap/fb_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_37"
        android:orientation="horizontal">

        <com.iyoyogo.android.view.DrawableTextView
            android:id="@+id/yoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/fabu_yoji"
            android:textColor="#333333"
            android:textSize="12sp"
            app:topDrawable="@mipmap/yoji"
            app:topDrawableHeight="@dimen/dp_80"
            app:topDrawableWidth="@dimen/dp_80" />

        <com.iyoyogo.android.view.DrawableTextView
            android:id="@+id/yoxiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/fabu_yoxiu"
            android:textColor="#333333"
            android:textSize="12sp"
            app:topDrawable="@mipmap/yoxiu"
            app:topDrawableHeight="@dimen/dp_80"
            app:topDrawableWidth="@dimen/dp_80" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="fitXY"
            android:src="@mipmap/index_close" />
    </LinearLayout>
</RelativeLayout>