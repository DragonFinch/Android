<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_choose_sign"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:id="@+id/back"
            android:src="@mipmap/back_black"
            />
        <TextView
            android:id="@+id/tv_title"
            android:textColor="#000"
            android:textSize="@dimen/sp_15"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_20"
            android:text="创建地址"
            android:layout_centerInParent="true"
            />
        <TextView
            android:clickable="true"
            android:id="@+id/create_complete"
            android:layout_marginTop="@dimen/dp_6"


            android:textSize="@dimen/sp_15"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_21"
            android:layout_alignParentRight="true"
            android:textColor="#333333"
            android:text="完成"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <ImageView
              android:id="@+id/make_worth_img"
              android:src="@mipmap/zhide_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
<TextView
    android:id="@+id/add_make_worth"
    android:layout_alignParentRight="true"
    android:layout_width="@dimen/dp_33"
    android:gravity="center"
    android:textColor="@color/blue"
    android:background="@drawable/label_bg_fkzn"
    android:layout_height="@dimen/dp_22"
    android:text="@string/add"
    />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:layout_marginTop="@dimen/dp_13"
            android:id="@+id/vp_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View style="@style/CommonLine_Style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pit_guide_img"
                android:src="@mipmap/fangkeng_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/add_pit_guide"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_33"
                android:gravity="center"
                android:textColor="@color/orange"
                android:background="@drawable/label_bg_deserve_to_do"
                android:layout_height="@dimen/dp_22"
                android:text="@string/add"
                />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View style="@style/CommonLine_Style" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_40"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/exclusive_mine_img"
                android:src="@mipmap/zhuanshu_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/add_exclusive_mine"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_33"
                android:gravity="center"
                android:textColor="@color/color_exclusive"
                android:background="@drawable/label_bg_exclusive"
                android:layout_height="@dimen/dp_22"
                android:text="@string/add"
                />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_third"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--<EditText-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_40"-->
        <!--android:background="@drawable/wo_de_zhuan_shu_shape"-->
        <!--android:gravity="center_vertical"-->
        <!--android:hint="记录我的专有名词"-->
        <!--android:padding="@dimen/dp_5"-->
        <!--android:textColorHint="@color/desc_color_888888"-->
        <!--android:textSize="@dimen/sp_15" />-->
    </LinearLayout>


</LinearLayout>