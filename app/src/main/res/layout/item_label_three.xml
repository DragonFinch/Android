<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lable_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/label_bg_exclusive"
        android:text="aaa"
        android:textColor="@color/color_exclusive" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignTop="@id/lable_name_tv"
        android:layout_alignRight="@id/lable_name_tv"
        android:layout_marginTop="-5dp"
        android:layout_marginRight="-4dp"
        android:src="@mipmap/delete"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_choice"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignRight="@id/lable_name_tv"
        android:layout_alignBottom="@id/lable_name_tv"
        android:layout_marginRight="-4dp"
        android:layout_marginBottom="-5dp"
        android:src="@mipmap/xuanzhong_zp"
        android:visibility="gone" />
</RelativeLayout>