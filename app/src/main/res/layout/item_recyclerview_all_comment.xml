<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_21"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.iyoyogo.android.widget.CircleImageView
            android:id="@+id/all_comment_img_user_icon"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/headimage" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10">

            <RelativeLayout
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/all_comment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我还是个宝宝"
                    android:textColor="@color/c333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/all_comment_name"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/all_comment_title"
                    android:background="@drawable/all_comment_01"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="作者"
                    android:textColor="@color/c333333"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/all_comment_zan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:drawableLeft="@mipmap/zan"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10"
                        android:textColor="@color/c888888"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/all_comment_pinglun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:drawableLeft="@mipmap/ic_comment"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="10w"
                        android:textColor="@color/c888888"
                        android:textSize="10sp"
                        android:drawablePadding="5dp"
                        />

                    <ImageView
                        android:id="@+id/all_comment_more_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:src="@mipmap/index_more" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/all_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/all"
                android:paddingTop="5dp"
                android:text="1小时前"
                android:textColor="@color/c888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/all_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/all_comment_time"
                android:paddingTop="@dimen/dp_10"
                android:text="我希望有个如你一般的人，如山间清爽的风，如古城温暖的光，从清晨到夜晚"
                android:textColor="@color/c333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/all_comment_content"
                android:layout_alignParentRight="true"
                android:text="全文"
                android:textColor="#5BCBF5"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F1F1"
        android:layout_marginTop="@dimen/dp_10"/>


</LinearLayout>
