<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.yoji.PhotoActivity">


<com.luck.picture.lib.photoview.PhotoView
    android:id="@+id/photo"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_500"
    android:scaleType="centerInside"
    android:src="@drawable/welcome2"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_350"
        >
        <ImageView
            android:id="@+id/img_water_mark"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_meipai_logo"
            />

        <TextView
            android:id="@+id/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/F1F1F1"
            android:layout_marginLeft="6dp"
            android:text="by "
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/F1F1F1"
            android:text="Anne"/>

    </LinearLayout>



</RelativeLayout>