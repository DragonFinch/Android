<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_150"
    android:layout_height="@dimen/dp_243"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/bg_yoji_list">

    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180">

            <RelativeLayout
                android:id="@+id/rela_img"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_corner_bottom">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/dp_150"
                        android:layout_height="@dimen/dp_150"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/default_ic" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_video"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/bofang"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_8"
                    android:src="@mipmap/jingxuan"
                    android:visibility="gone"
                    />

                <TextView

                    android:id="@+id/tv_addr_cover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_25"
                    android:alpha="0.8"
                    android:background="@drawable/label_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="13456456"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_like"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:src="@mipmap/datu_xihuan" />

                    <TextView
                        android:id="@+id/num_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="100"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

            </RelativeLayout>

            <com.iyoyogo.android.widget.CircleImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@mipmap/default_touxiang"
                app:civ_border_color="#ffffff"
                app:civ_border_width="@dimen/dp_1"

                />

            <ImageView
                android:id="@+id/medal"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_alignRight="@+id/user_icon"
                android:layout_alignBottom="@+id/user_icon"
                android:src="@mipmap/hong"
                android:visibility="gone" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_toRightOf="@id/user_icon"
                android:text="明天会更好"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/img_level"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_122"
                android:layout_below="@+id/rela_img"
                android:layout_alignBottom="@+id/user_name"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@+id/user_name"
                android:src="@mipmap/lv3"
                android:visibility="gone" />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="从学府到海滩，从蓝天来"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/dp_14"
        >

        <ImageView
            android:id="@+id/index_look_icon"
            android:layout_width="@dimen/dp_11"
            android:layout_height="@dimen/dp_11"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_11"
            android:scaleType="fitXY"
            android:src="@mipmap/see" />

        <TextView
            android:id="@+id/num_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/index_look_icon"
            android:text="100"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_10" />

        <RelativeLayout
            android:id="@+id/view_like"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_m_10"
            android:paddingRight="@dimen/dp_11">

            <ImageView
                android:id="@+id/more_img"
                android:layout_width="@dimen/dp_15"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/index_more" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>