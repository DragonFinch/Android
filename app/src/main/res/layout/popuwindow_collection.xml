<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_50"
    android:background="@mipmap/xiala_bg_"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_share"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone">

        <com.iyoyogo.android.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/str_share"
            android:textColor="@color/common_color"
            android:textSize="@dimen/sp_15"
            app:leftDrawable="@mipmap/share"
            app:leftDrawableHeight="@dimen/dp_15"
            app:leftDrawableWidth="@dimen/dp_15" />
    </RelativeLayout>

    <!--<View style="@style/CommonLine_Style" />-->

    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.iyoyogo.android.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/str_edit"
            android:textColor="@color/common_color"
            android:textSize="@dimen/sp_15"
            app:leftDrawable="@mipmap/bianji"
            app:leftDrawableHeight="@dimen/dp_23"
            app:leftDrawableWidth="@dimen/dp_23" />
    </RelativeLayout>

    <View style="@style/CommonLine_Style" />

    <RelativeLayout
        android:id="@+id/rl_manage"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.iyoyogo.android.view.DrawableTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_10"
            android:text="@string/str_manage"
            android:textColor="@color/common_color"
            android:textSize="@dimen/sp_15"
            app:leftDrawable="@mipmap/menu"
            app:leftDrawableHeight="@dimen/dp_16"
            app:leftDrawableWidth="@dimen/dp_16" />
    </RelativeLayout>
</LinearLayout>