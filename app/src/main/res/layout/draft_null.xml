<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/draft_blank"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:src="@mipmap/blank_list" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="草稿箱空了yo～"
        android:textColor="@color/c333333"
        android:textSize="@dimen/sp_15" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11"
        android:text="快创作些什么填满它吧"
        android:textColor="#ff888888"
        android:textSize="@dimen/sp_15" />
<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/yoxiu_tv"
        android:textSize="@dimen/sp_15"
        android:textColor="#FA800A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yoxiu"
        />
<ImageView
    android:layout_marginTop="@dimen/dp_3"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_below="@+id/yoxiu_tv"
    android:src="@mipmap/line_or"
    android:layout_width="@dimen/dp29"
    android:layout_height="@dimen/dp_2" />
    <TextView
        android:id="@+id/tv_yoji"
        android:layout_toRightOf="@+id/yoxiu_tv"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_weight="1"
        android:textColor="#FA800A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yoji"

        />
    <ImageView
android:layout_marginTop="@dimen/dp_3"
        android:layout_toRightOf="@+id/yoxiu_tv"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_below="@+id/tv_yoji"
        android:src="@mipmap/line_or"
        android:layout_width="@dimen/dp29"
        android:layout_height="@dimen/dp_2" />
</RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line_or"
            />
    </LinearLayout>
</LinearLayout>