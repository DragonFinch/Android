<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_rlayout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFFFFFF">

    <LinearLayout
        android:id="@+id/edit_lltoobar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_back_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@mipmap/back_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/bianji"
            android:textColor="@color/color333333" />

        <TextView
            android:id="@+id/edit_publish_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_20"
            android:text="发布" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/edit_rlvideo_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_185"
        android:layout_below="@id/edit_lltoobar_id">

        <ImageView
            android:id="@+id/edit_video_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/publish_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/addr_bg"
            android:drawableLeft="@mipmap/weizhi_biaoqian"
            android:gravity="center"
            android:text="@string/shier"
            android:textColor="@color/colorFFFFFF"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/edit_start_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_video" />
<RelativeLayout
    android:layout_marginBottom="@dimen/dp_20"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:layout_width="@dimen/dp_78"
    android:background="@mipmap/genghuanbg"
    android:layout_height="@dimen/dp_30">
    <TextView
        android:drawablePadding="@dimen/dp_5"
        android:id="@+id/edit_replace_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genghuan"
       android:layout_centerInParent="true"
        android:drawableLeft="@mipmap/genghuan"
        android:textColor="#fff" />
</RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_rledittext_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_rlvideo_id"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.iyoyogo.android.widget.REditText

            android:id="@+id/edit_edittext_id"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#00000000"
            android:hint="@string/gushi"
            android:maxLength="200"
            android:maxLines="6"
            android:singleLine="false"

            android:textSize="15sp"
            view:object_background_color="#00000000"
            view:object_foreground_color="#FA800A" />

        <LinearLayout
            android:id="@+id/num_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/edit_edittext_id"
            android:layout_alignBottom="@+id/edit_edittext_id"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edit_number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/200"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/edit_rledittext_id"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/colorBFBFBF" />

    <LinearLayout
        android:id="@+id/edit_middleToobar_id"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_below="@id/edit_rledittext_id"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/tuijianhuati" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tuijian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:id="@+id/more_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:text="@string/huati" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_middleToobar_id"
        android:orientation="vertical">

        <com.iyoyogo.android.widget.FlowGroupView
            android:id="@+id/edit_flowgroupview_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/colorF1F1F1" />

    <RelativeLayout
        android:id="@+id/edit_llchoice_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/channel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pindao" />

        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/channel_img"
            android:background="@drawable/fillet_style"
            android:text="@string/xuanze" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_toLeftOf="@+id/channel_next"
            android:src="@mipmap/bitian" />

        <ImageView
            android:id="@+id/channel_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/ic_arrow_right" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/channel_recycler"
            android:layout_width="@dimen/dp_240"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:visibility="gone" />

        <View
            android:visibility="gone"
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/channel_recycler"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/colorF1F1F1" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_llchoice_id"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="分享至:"
            android:textSize="@dimen/sp_18" />

        <RadioGroup
            android:id="@+id/group_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_toLeftOf="@+id/edit_button_id"
            android:layout_toRightOf="@+id/tv_share"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/edit_penyouquan_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/friend_circle_selector"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/edit_weibo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/sina_selector"
                android:button="@null" />

            <RadioButton
                android:id="@+id/edit_weixin_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/wechat_selector"
                android:button="@null" />

            <RadioButton

                android:id="@+id/edit_qq_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qq_selector"
                android:button="@null" />
        </RadioGroup>

        <Button
            android:id="@+id/edit_button_id"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@drawable/fillet_style_tow"
            android:drawableLeft="@mipmap/gongkai_xz"
            android:drawablePadding="@dimen/dp_m_10"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_15"
            android:text="公开"
            android:textColor="#FA800A" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/share_layout"
        android:layout_alignParentRight="true"
        android:background="@mipmap/input_fangdabg"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/button_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFFFFFF"
            android:drawableLeft="@mipmap/gongkai_xz"
            android:paddingLeft="@dimen/dp_5"
            android:text="@string/gongkai"
            android:textColor="#FA800A" />

        <Button
            android:id="@+id/button_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorFFFFFF"
            android:drawableLeft="@mipmap/simi_wxz"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_5"
            android:text="@string/simi" />
    </LinearLayout>
</RelativeLayout>
