<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--喜欢我的-->
    <!--评论消息-->
    <!--item-->
    <View
        android:layout_marginTop="@dimen/dp_38"
        android:id="@+id/dot_read"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/red_dot" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout"
        android:layout_toRightOf="@+id/dot_read"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <com.iyoyogo.android.widget.CircleImageView
            android:layout_width="@dimen/dp_40"
            android:id="@+id/user_icon"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/user_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/fabuyouxiu"
            android:textColor="@color/FA800A"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/fabuyouxiu"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/gray_fillet"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_2"
                android:text="@string/huifu"
                android:textColor="@color/c888888"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_below="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_10">

        <TextView

            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/item_like_iv_id"
            android:text="@string/fabuyouxiu"
            android:textColor="@color/color333333"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/item_like_iv_id"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="111"
            android:textColor="@color/c888888"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <View
       android:layout_below="@+id/content_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_75"

        android:background="@color/E1E1E1"
        android:layout_marginTop="@dimen/dp_10"/>


</RelativeLayout>